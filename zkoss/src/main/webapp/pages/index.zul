<?page id="indexPage" title=" ZKoss sample application" contentType="text/html;charset=UTF-8" cacheable="false" 
	language="xul/html" zscriptLanguage="Java"?>

<!-- 	
	<?meta content="text/html; charset=UTF-8" 	pageEncoding="UTF-8"?>
-->

<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<script type="text/javascript">
		<!-- Function for scrolling the text -->
		<!-- thanks to dagarwal82; http://www.zkoss.org/forum/listComment/16011 -->

		
		<![CDATA[ function scrollTextbox(txtBox) { var txtEle =
		document.getElementById(txtBox); txtEle.scrollTop =
		txtEle.scrollHeight; } ]]>
		
		
	</script>

	<window id="outerIndexWindow" apply="${indexCtrl}" border="none"
		width="100%" height="100%">

		<style>
			body { padding: 0 0; /* 0 padding on top and bottom and 0
			padding on right and left */ }

			.z-loading { top: 50% !important; left: 45% !important;
			align: center; vertical-align: middle; }

			<!-- groupbox inner content area, NO padding -->
			.myGroupBoxContentArea .z-groupbox-cnt{ background-color:
			white; padding: 0px }
		</style>

		<!-- HIDDEN fields for storing the current desktop height and width -->
		<intbox id="currentDesktopHeight" visible="false" />
		<intbox id="currentDesktopWidth" visible="false" />
		<!-- HIDDEN field for storing the initial menu type -->
		<checkbox id="CBtreeMenu" checked="true" visible="false" />

		<borderlayout id="borderlayoutMain" height="100%">
			<north id="borderlayoutMainNorth" border="none"
				height="40px" splittable="false">

				<!-- 
					<div id="div1" style="background-color:silver;">
				-->
				<div id="div1"
					style="background-color:silver; background-image:url(${c:encodeURL('/images/ZKHeader_2x38.png')});  background-repeat: repeat-x; border: 'none';">


					<hbox pack="stretch" width="100%">

						<div id="divNo" align="left"
							style="padding: 1px; ">
							<image src="/images/zkpowered_34x34.png" />
						</div>


						<div align="left" style="padding: 0px;">
							<image src="/images/ZKHeader2_176x38.jpg" />
						</div>


						<div align="right" style="float: right">

							<hbox>
								<!-- Monitor Background pic -->
								<div
									style="background-color:silver; background-image:url(${c:encodeURL('/images/ZKHeaderMonitorOnly_70x38.png')}); background-repeat:no-repeat; float:left; border: 'none'; width:70px;height:38px; "
									align="right">
								</div>


								<div align="right"
									style="float: right">
									<vlayout>

										<div align="right"
											style="float: right">
											<!-- USER-BAR. Comps are created in the Controller -->
											<window id="winUserBar"
												apply="${userBarCtrl}" border="none" />
										</div>

										<div align="right"
											style="float: right; padding-bottom: 3px;">

											<!-- 
												<hbox pack="end">
												<toolbarbutton
												id="btnIndexMySettings" label="${c:l('common.MySettings')}"
												style="text-decoration: underline; color: white;" />
												<toolbarbutton
												id="btnAboutZksample2" label="${c:l('common.About')}"
												style="text-decoration: underline; color: white;" />
												<button id="btnLogout"
												height="20px" label="${c:l('btnLogout.label')}"
												tooltiptext="${c:l('btnLogout.tooltiptext')}" />
												</hbox>
											-->
											<hbox pack="end">
												<a id="btnUserSettings"
													label="${c:l('common.MySettings')}" style="color: white;" />
												<space width="5px" />
												<a id="btnAbout"
													label="${c:l('common.About')}" style="color: white;" />
												<space width="5px" />
												<a id="btnLogout"
													label="${c:l('btnLogout.label')}" style="color: white;" />
												<space width="8px" />
											</hbox>
										</div>

									</vlayout>
								</div>
							</hbox>

						</div>
					</hbox>

					<div id="divDropDownMenu" width="100%">
						<menubar id="mainMenuBar" height="25px"></menubar>
					</div>
				</div>
			</north>

			<!-- MAIN MENU AREA -->
			<west id="west" border="none" margins="0,0,0,0" size="230px"
				collapsible="true" style="background-color: #D6DCDE; padding: 5px"
				flex="true" minsize="100" splittable="true" autoscroll="false">
				<div id="divWest">WEST</div>
			</west>

			<!-- MODULE CONTENT AREA -->
			<center id="center" border="none" margins="0,0,0,0"
				flex="true" autoscroll="true"
				style="background-color: #D6DCDE; padding: 5px">
				<div id="divCenter">

					<groupbox id="groupbox_menu" mold="3d"
						closable="false" sclass="myGroupBoxContentArea">
						<caption
							style="color: #000000; font-weight: bold;"
							label="${c:l('workplace')}">
							<div sclass="z-toolbar" style="padding:0">
								<hbox pack="stretch"
									sclass="hboxRemoveWhiteStrips" width="100%">

									<toolbar align="start"
										style="float:left; border-style: none;">
									</toolbar>

									<toolbar align="center"
										style="float:left; border-style: none;">
									</toolbar>

									<toolbar align="end"
										style="float:right; border-style: none;">
										<toolbarbutton
											id="btnCloseAllTabs" image="/images/icons/stop.gif"
											tooltiptext="${c:l('btnCloseAllTabs.tooltiptext')}" />
									</toolbar>
								</hbox>
							</div>
						</caption>



						<tabbox id="tabBoxIndexCenter" width="100%"
							style="padding: 0px">
							<tabs id="tabsIndexCenter"></tabs>
							<tabpanels id="tabpanelsBoxIndexCenter">
							</tabpanels>
						</tabbox>
					</groupbox>

				</div>
			</center>

			<east border="none" margins="0,0,0,0" size="0%">
				<div id="divEast">EAST</div>
			</east>


			<!-- STATUS BAR AREA -->
			<south id="south" border="none" height="22px"
				splittable="false">

				<div id="divSouth" align="left"
					style="float: left; padding: 0px" width="100%">

					<borderlayout width="100%" height="22px">

						<west border="none" width="50px">

							<!-- 
								function scrolltxt(txt) { var txtEle =
								document.getElementById(txtBox);
								txtEle.scrollTop = txtEle.scrollHeight; }
							-->

							<!-- The MessageBar. Comps are created in the Controller -->
							<window id="winMessageBar"
								apply="${messageBarCtrl}" border="none" width="50px"
								height="22px" />
						</west>

						<center border="none">
							<!-- The StatusBar. Comps are created in the Controller -->
							<window id="winStatusBar"
								apply="${statusBarCtrl}" border="none" width="100%"
								height="22px" />
						</center>

					</borderlayout>

				</div>

			</south>
		</borderlayout>


	</window>
</zk>


